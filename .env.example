# =============================================================================
# RAG File MCP Server - Environment Configuration
# =============================================================================
# Copy this file to .env and customize as needed.

# -----------------------------------------------------------------------------
# Streamlit Configuration
# -----------------------------------------------------------------------------
STREAMLIT_PORT=8501
STREAMLIT_HOST=0.0.0.0

# -----------------------------------------------------------------------------
# MCP Server Configuration
# -----------------------------------------------------------------------------
MCP_SERVER_HOST=0.0.0.0
MCP_SERVER_PORT=8000

# -----------------------------------------------------------------------------
# File Upload Settings
# -----------------------------------------------------------------------------
UPLOAD_DIR=./data/uploads
MAX_UPLOAD_SIZE_MB=50
ALLOWED_EXTENSIONS=pdf,txt,md,rst

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
LOG_DB_PATH=./data/logs.db
LOG_LEVEL=INFO
LOG_RETENTION_DAYS=30

# -----------------------------------------------------------------------------
# Embedding Provider
# -----------------------------------------------------------------------------
# Choose: "ollama" (default) or "openai"
EMBEDDING_PROVIDER=ollama

# -----------------------------------------------------------------------------
# Ollama Configuration (used when EMBEDDING_PROVIDER=ollama)
# -----------------------------------------------------------------------------
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=nomic-embed-text

# -----------------------------------------------------------------------------
# OpenAI Configuration (used when EMBEDDING_PROVIDER=openai)
# -----------------------------------------------------------------------------
# OPENAI_API_KEY=your-key-here
# OPENAI_MODEL=text-embedding-3-small

# -----------------------------------------------------------------------------
# Vector Store
# -----------------------------------------------------------------------------
# Choose: "chroma" (default), "qdrant", "pinecone", "faiss", "memory"
VECTOR_STORE_TYPE=chroma

# -----------------------------------------------------------------------------
# ChromaDB Settings (used when VECTOR_STORE_TYPE=chroma)
# -----------------------------------------------------------------------------
CHROMA_PERSIST_DIR=./data/chroma
CHROMA_COLLECTION_NAME=rag_documents

# -----------------------------------------------------------------------------
# Chunking Settings
# -----------------------------------------------------------------------------
CHUNK_SIZE=500
CHUNK_OVERLAP=50
